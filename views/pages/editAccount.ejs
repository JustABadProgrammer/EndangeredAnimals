<!DOCTYPE html>

<html>

<head>
    <title>Edit Account</title>
    <link rel="stylesheet" href="stylesheets\editAccount.css">
    <script>
        var session = '<%- session %>'
            var parsedSession = JSON.parse(session);
            if(parsedSession.loggedin != null && parsedSession.loggedin == true){
                userInfo = {
                    LoggedIn : parsedSession.loggedin,
                    Username: parsedSession.username,
                    Admin: parsedSession.admin,
                    EventsInterested: parsedSession.eventsInterested,
                    PersonalBest: parsedSession.personalBest
                }
            }else{
                userInfo=null;
            }
    </script>
    <%- include('../partials/head', {active: "Account" }) %>
        <%- include('../partials/login') %>
            <script src="scripts\editAccount.js"></script>
</head>

<body>

    <div id="pageContent">

        <div id="Username">
            <h1>Hello <%= name %>
            </h1>
        </div>
        <div id="idSettings">

            <div id="usernameChangeDiv">
                <label for="updateUsername"><b>Username:</label>
                <input class="txt" type="text" id="usernameTxt" placeholder="Enter Username" name="usernameTxt" disabled
                    value=<%=name %>></br>
                <button class="txt" id="editUsername">Change Username</button>
                <button class="cancel" id="usernameCancel">Cancel</button>

            </div></br></br>
            <div id="passwordChangeDiv">
                <label for="curPass"><b>Current Password:</label>
                <input class="txt" type="password" id="currPass" name="curPass" placeholder="******************************" disabled></br>

                <label for="CurrentPassword"><b>New Password:</label>
                <input class="txt" type="password" id="newPass" name="newPass" placeholder="" disabled></br>

                <label for="CurrentPassword"><b>Confirm New Password:</label>
                <input class="txt" type="password" id="confNewPass" name="newPass" placeholder="" disabled></br>
                <h2 class="txt" id="incLabel"></h2>
                <button class="txt" id="editPassword">Edit Password</button>
                <button class="cancel" id="passwordCancel">Cancel</button>
            </div></br></br>
            <div id="deleteAccountDiv">
                <button id="deleteAccount">Delete Account</button>
            </div>
            
        </div>
        
    </div>
    
<%- include('../partials/footer') %>
</body>
</html>